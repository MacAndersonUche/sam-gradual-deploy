{
  "compilerOptions": {
    "types": ["node", "vitest"],
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2019",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "src/__tests__/**/*.test.ts"]
}
